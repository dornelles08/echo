{
  "name": "api",
  "main": "./src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch ./src/server.ts | pino-pretty",
    "start": "node --loader tsx/esm ./src/server.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/s3-request-presigner": "^3.981.0",
    "@echo/core": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@prisma/client": "6.19",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.10.2",
    "prisma": "6.19",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  }
}
